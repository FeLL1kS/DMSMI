@model WebHospital.Models.Doctor
@{
    ViewBag.Title = "Удаление доктора " + Model.FullName;
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>Возраст</dt>
        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>

    <div>
        <form asp-controller="Doctors" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Удалить" />
            </div>
        </form>
    </div>
</div>