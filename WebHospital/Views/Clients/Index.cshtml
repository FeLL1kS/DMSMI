@model IEnumerable<WebHospital.Models.Client>
<h2>Все клиенты</h2>

<a asp-action="Create" class="btn btn-success">Добавить клиента</a>

<table class="table table-striped mt-2">
    <thead>
        <tr>
            <td>Имя</td>
            <td>Возраст</td>
            <td>Пол</td>
            <td>Адрес</td>
            <td>СНИЛС</td>
            <td>Полис</td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.FullName</td>
        <td>@item.Age</td>
        <td>@item.Sex</td>
        <td>@item.Address</td>
        <td>@item.SNILS</td>
        <td>@item.Policy</td>
        <td><a asp-action="Edit" asp-controller="Clients" asp-route-id="@item.Id">Изменить</a></td>
        <td><a asp-action="Delete" asp-controller="Clients" asp-route-id="@item.Id">Удалить</a></td>
    </tr>
    }
</table>